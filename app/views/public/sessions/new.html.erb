<div class="container px-5">
  <div class="row m-5">
    <div class="col-md-10 bg-white shadow rounded mx-auto py-5 px-5">
    <%= form_with model: @user, url: user_session_path, method: :post do |f| %>
    <h5 class ="form-group font-weight-bold text-center mb-5">ログイン</h5>
    <div class="form-group">
      <p class="text-dark mb-0 mt-5">メールアドレス</p>
      <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class: "form-control mb-5" %>
    </div>

    <div class="form-group">
      <p class="text-dark mb-0 mt-5">パスワード</p>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-5" %>
    </div>

    <div class="form-group text-center mb-0 mt-5">
      <%= f.submit 'ログイン' , class:"btn btn-primary btn-lg py-1" %>
    </div>
    <% end %>
    </div>
  </div>
</div>

