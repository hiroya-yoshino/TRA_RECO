<div class="container px-5">
  <div class="row my-5 px-5">
    <h4 class="font-weight-bold">レビュー一覧</h4>
  </div>
  <% @reviews.each do |review| %>
  <div class="row m-5">
    <div class="col-md-10 bg-white shadow rounded mx-auto px-5">
      <div class="row my-3">
        <div class="col-10">
          <h5 class="font-weight-bold d-flex align-items-center mb-0"><%= review.title %></h5>
        </div>
        <div class="col-2">
          <%= link_to "削除", admin_review_path(review.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn rounded btn-danger ml-auto text-white" %>
        </div>
      </div>
      <div class="row my-3">
        <%= link_to admin_user_path(review.user.id), class: "px-0" do %>
        <% if review.user.profile_image.present? %>
        <%= image_tag review.user.profile_image, class: "rounded-circle border mr-5 profile_image" %>
        <% else %>
        <%= image_tag 'no-image.jpg', class: "rounded-circle border mr-5 profile_image" %>
        <% end %>
        <% end %>
        <p class="font-weight-bold mx-3 mt-3"><%= review.user.name %></p>
        <p class="font-weight-bold mx-3 mt-3"><%= User.sexes_i18n[review.user.sex] %></p>
      </div>
      <div class="row mt-3">
        <p><%=safe_join(review.content.split("\n"),tag(:br))%></p>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row my-5 px-5">
    <%= link_to :back, class: "text-primary" do %>
    <i class="fas fa-arrow-circle-left fa-2x" style="color: primary"></i>
    <% end %>
  </div>
</div>