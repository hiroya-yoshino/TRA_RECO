<div class="container px-5">
  <div class="row my-5 px-5">
    <h4 class="font-weight-bold">会員一覧</h4>
  </div>
  <% @users.each do |user| %>
  <div class="row m-5">
    <div class="col-md-10 bg-white shadow rounded mx-auto py-3 px-5">
      <div class="row my-auto">
        <% if user.profile_image.present? %>
        <%= image_tag user.profile_image, class: "rounded-circle border mr-5", size: "70x70" %>
        <% else %>
        <%= image_tag 'no-image.jpg', class: "rounded-circle border mr-5", size: "70x70" %>
        <% end %>
        <%= link_to admin_user_path(user.id) do %>
        <h5 class="font-weight-bold mx-3 mt-3"><u><%= user.name %></u></h5>
        <% end %>
        <h5 class="font-weight-bold mx-3 mt-3"><%= User.sexes_i18n[user.sex] %></h5>
        <h5 class="font-weight-bold mx-3 mt-3"><%= user.birth_display %>生まれ</h5>
        <% if user.is_delete %>
        <h5 class="font-weight-bold ml-auto text-danger my-3">退会</h5>
        <% else %>
        <h5 class="font-weight-bold ml-auto text-success my-3">有効</h5>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>

</div>